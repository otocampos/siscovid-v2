
<main class="container mt-5">
 
   
    <div id="principal" class="shadow mt-2 form-group dynamic-element list-group list-group-item  flex-col align-items-start rounded-lg ">
      <h1>Transferência / Histórico</h1>
      <p>Espaço destinado a internação de pacientes</p>
        <form method="POST" action="/paciente/<%=idInternacao%>/internacao/transferir" >
        <div class="form-group row">
          <div class=" col-sm-4 col-lg-2 col-md-5 float-left">
            <label><strong>Leito Atual</strong></label>
<input type="hidden" required name="leitoAtual"  class="form-control" value=<%=leito.dataValues.id%>>
            <input type="text" required  class="form-control" readonly  placeholder="<%=leito.dataValues.local.dataValues.nome%> / <%=leito.dataValues.numero%>  ">
            <sub class="form-text text-muted"></s>
          </div>
          <div class="col-sm-4 col-lg-3 col-md-6 float-left">
            <label><strong>Transferir paciente para</strong></label>
            <select class="form-control" name="proximoLeito" id="exampleFormControlSelect1">
              <option selected disabled>Selecione</option>
              <% if(typeof(leitosVagos) != undefined ){ %>
                <% leitosVagos.forEach( local => { %>
                  <option value=<%=local.dataValues.id%> class="list-group-item bg-primary text-white" disabled><%=local.dataValues.nome%></option>
                  <% local.dataValues.leito.forEach( leito => { %>
                    <option value=<%=leito.id%> class="list-group-item "><%=leito.numero%></option>
                    <% }) %>
                  <% }) %>
                <%}%>
            </select> 
          </div>
         
          <div class="col-sm-4 col-lg-2 col-md-6 float-left">
            <div class="row d-flex justify-content-end mt-4">

                <div class="input-group-btn col-sm-4 col-lg-6 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary ">tranferir</button>
                </div>
              </div>
          </div>
        </div>
</form>
<div class="form-group row">
  <div class="col-sm-4 col-lg-12 col-md-6 float-left">

  </div>
</div>








      </div>
</main>